ETCD_NAME="{{inventory_hostname}}"
ETCD_DATA_DIR="/var/lib/etcd/ffbs-vagrant"

ETCD_INITIAL_ADVERTISE_PEER_URLS="https://{{etcd_peer_ip}}:2380"
ETCD_INITIAL_CLUSTER="{{etcd_initial_cluster}}"
ETCD_INITIAL_CLUSTER_STATE="new"
ETCD_INITIAL_CLUSTER_TOKEN="ffbs-vagrant-etcd-cluster"

ETCD_LISTEN_PEER_URLS="https://0.0.0.0:2380"
ETCD_LISTEN_CLIENT_URLS="https://0.0.0.0:2379"

ETCD_ADVERTISE_CLIENT_URLS="https://{{etcd_peer_ip}}:2379"

ETCD_CERT_FILE="/etc/ssl/etcd/etcd-server.cert.pem"
ETCD_KEY_FILE="/etc/ssl/etcd/etcd-server.key.pem"
ETCD_CLIENT_CERT_AUTH="true"
ETCD_TRUSTED_CA_FILE="/etc/ssl/etcd/etcd-ca.pem"

ETCD_PEER_CERT_FILE="/etc/ssl/etcd/etcd-server.cert.pem"
ETCD_PEER_KEY_FILE="/etc/ssl/etcd/etcd-server.key.pem"
ETCD_PEER_CLIENT_CERT_AUTH="true"
ETCD_PEER_TRUSTED_CA_FILE="/etc/ssl/etcd/etcd-ca.pem"

DAEMON_ARGS="--auto-compaction-retention=1 --snapshot-count=10000"
